{
	"$schema": "https://biomejs.dev/schemas/2.3.6/schema.json",
	"overrides": [
		{
			"includes": ["**/*.svelte", "**/*.astro", "**/*.vue"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off"
					},

					"correctness": {
						"noUnusedVariables": "off",
						"noUnusedImports": "off"
					}
				}
			}
		},
		{
			"includes": ["src/styles/global.css"],
			"linter": {
				"enabled": false
			}
		}
	]
}
