---
import { ChevronLeft } from "lucide-solid";

interface Props {
	title?: string;
	showBack?: boolean;
	backUrl?: string;
}

const {
	title = "Lost Items",
	showBack = false,
	backUrl = "javascript:history.back()",
} = Astro.props;
---

<header class="sticky top-0 z-40 w-full bg-background border-b border-border">
  <div class="flex h-14 items-center px-4 relative justify-center">
    {showBack && (
      <a href={backUrl} class="absolute left-4 p-2 -ml-2 text-muted-foreground hover:text-foreground">
        <ChevronLeft class="size-6" />
        <span class="sr-only">Back</span>
      </a>
    )}
    <h1 class="text-xl font-bold text-foreground truncate max-w-[200px]" id="header-title">
      {title}
    </h1>

    <div class="absolute right-4 flex items-center">
      <slot name="right" />
    </div>
  </div>
</header>
