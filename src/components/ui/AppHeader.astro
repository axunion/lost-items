---
import { ChevronLeft } from "lucide-solid";

interface Props {
	title?: string;
	showBack?: boolean;
	backUrl?: string;
	class?: string;
}

const {
	title = "Lost Items",
	showBack = false,
	backUrl = "javascript:history.back()",
	class: className = "",
} = Astro.props;
---

<header class:list={["sticky top-0 z-40 w-full border-b border-border/40 bg-white/80 backdrop-blur-md", className]}>
  <div class="flex h-14 items-center px-4 relative justify-center">
    {showBack && (
      <a href={backUrl} class="absolute left-4 p-2 -ml-2 text-muted-foreground hover:text-foreground active:opacity-70 transition-opacity">
        <ChevronLeft class="size-6" />
        <span class="sr-only">Back</span>
      </a>
    )}
    <h1 class="text-[17px] font-semibold tracking-tight text-center truncate px-10">
      {title}
    </h1>
    <div class="absolute right-4">
      <slot name="right" />
    </div>
  </div>
</header>
