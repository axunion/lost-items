---
import { ChevronLeft } from "lucide-solid";
import ThemeToggle from "./ThemeToggle";

interface Props {
	title?: string;
	showBack?: boolean;
	backUrl?: string;
	class?: string;
}

const {
	title = "Lost Items",
	showBack = false,
	backUrl = "javascript:history.back()",
	class: className = "",
} = Astro.props;
---

<header class:list={["sticky top-0 z-40 w-full bg-background/95 backdrop-blur supports-backdrop-filter:bg-background/60 border-b border-border", className]}>
  <div class="flex h-14 items-center px-4 relative justify-center">
    {showBack && (
      <a href={backUrl} class="absolute left-4 p-2 -ml-2 text-muted-foreground hover:text-foreground transition-colors">
        <ChevronLeft class="size-6" />
        <span class="sr-only">Back</span>
      </a>
    )}
    <h1 class="text-base font-semibold text-foreground text-center truncate px-10">
      {title}
    </h1>
    <div class="absolute right-4 flex items-center">
      <ThemeToggle client:only="solid-js" />
      <slot name="right" />
    </div>
  </div>
</header>
