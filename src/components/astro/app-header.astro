---
import { Icon } from "astro-icon/components";

interface Props {
	title: string;
	showBack?: boolean;
	backUrl?: string;
}

const { title, showBack = false, backUrl = "/" } = Astro.props;
---

<header class="sticky top-0 z-50 w-full bg-background/80 backdrop-blur-md border-b border-border/50">
	<div class="max-w-lg mx-auto h-16 px-4 flex items-center justify-between relative">
		<div class="flex items-center gap-3 min-w-0">
			{showBack && (
				<a
					href={backUrl}
					class="p-2 -ml-2 rounded-full hover:bg-secondary transition-colors"
				>
					<Icon name="lucide:chevron-left" class="size-6" />
				</a>
			)}
		</div>
		<h1
			id="header-title"
			class="absolute left-1/2 -translate-x-1/2 text-xl font-black tracking-tight truncate max-w-[60%] text-center"
		>
			{title}
		</h1>
		<div class="flex items-center gap-1">
			<slot name="right" />
		</div>
	</div>
</header>
