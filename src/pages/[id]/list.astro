---
import { Plus } from "lucide-solid";
import ItemList from "@/components/features/ItemList";
import { Button } from "@/components/ui/Button";
import Layout from "../../layouts/Layout.astro";

const { id } = Astro.params;

if (!id) {
	return Astro.redirect("/");
}
---

<Layout title="Lost Items List">
  <main class="container mx-auto min-h-screen p-4 bg-slate-50/50">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
      <div>
        <h1 class="text-2xl font-bold tracking-tight">Lost Items</h1>
        <p class="text-sm text-slate-500">Items reported at this location.</p>
      </div>
    </div>

    <ItemList listId={id} client:load />
  </main>
</Layout>
