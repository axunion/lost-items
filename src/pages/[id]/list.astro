---
import ItemList from "~/components/features/ItemList";
import AppHeader from "~/components/ui/AppHeader.astro";
import Layout from "../../layouts/Layout.astro";

const { id = "" } = Astro.params;
---

<Layout title="Lost Items List">
  <AppHeader title="Lost Items" showBack backUrl={`/${id}`} />

  <main class="px-4 py-6 space-y-4">
    <p class="text-sm text-muted-foreground text-center">
      Items reported at this location.
    </p>

    <ItemList listId={id} client:load />
  </main>
</Layout>
