---
import RegisterForm from "@/components/features/RegisterForm";
import Layout from "../../layouts/Layout.astro";

const { id } = Astro.params;

if (!id) {
	return Astro.redirect("/");
}
---

<Layout title="Register Item | Lost Items">
  <main class="container mx-auto flex min-h-screen flex-col items-center justify-center p-4 bg-slate-50/50">
    <div class="w-full max-w-md mb-4 px-4 sm:px-0">
      <a href={`/${id}`} class="text-sm text-slate-500 hover:text-slate-800 flex items-center gap-1">
        &larr; Organizer Dashboard
      </a>
    </div>

    <RegisterForm listId={id} client:load />
  </main>
</Layout>
