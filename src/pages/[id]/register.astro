---
import RegisterForm from "@/components/features/RegisterForm";
import AppHeader from "@/components/ui/AppHeader.astro";
import Layout from "../../layouts/Layout.astro";

const { id } = Astro.params;

if (!id) {
	return Astro.redirect("/");
}
---

<Layout title="Register Item | Lost Items">
  <AppHeader title="Register Item" showBack backUrl={`/${id}`} />

  <main class="container mx-auto px-4 py-6 max-w-md">
    <RegisterForm listId={id} client:load />
  </main>
</Layout>
