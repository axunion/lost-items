---
import { Plus } from "lucide-solid";
import HistoryList from "@/components/features/HistoryList";
import AppHeader from "@/components/ui/AppHeader.astro";
import { Button } from "@/components/ui/Button";
import {
	Card,
	CardContent,
	CardDescription,
	CardHeader,
	CardTitle,
} from "@/components/ui/Card";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Lost Items">
  <AppHeader title="Lost Items" />

  <main class="px-4 py-6 space-y-6">
    <div class="text-center space-y-1">
      <h2 class="text-2xl font-bold text-slate-900">Lost & Found</h2>
      <p class="text-slate-600">Manage items effortlessly.</p>
    </div>

    <Card class="bg-indigo-600 border-indigo-600">
      <CardHeader>
        <CardTitle class="text-white">Create New List</CardTitle>
        <CardDescription class="text-indigo-100">
          Start tracking items for an event or location.
        </CardDescription>
      </CardHeader>
      <CardContent>
        <form
          onsubmit="event.preventDefault(); const id = crypto.randomUUID(); window.location.href = `/${id}`;"
        >
          <Button type="submit" variant="outline" class="w-full bg-white text-indigo-600 border-white hover:bg-indigo-50">
            <Plus class="h-5 w-5 mr-2" />
            Create List
          </Button>
        </form>
      </CardContent>
    </Card>

    <div class="space-y-3">
      <div class="flex items-center justify-between">
        <h3 class="font-bold text-slate-900">Recent Lists</h3>
        <a href="/history" class="text-sm font-semibold text-indigo-600 hover:underline">
          View all
        </a>
      </div>
      <HistoryList client:only="solid-js" maxItems={3} />
    </div>
  </main>
</Layout>
